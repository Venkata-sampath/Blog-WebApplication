<%- include("partials/header.ejs") %>

<div class="container my-5">
	<div>
		<h1><%= post.title %></h1>
		<em><%= post.date %></em><br><br>

		<a href="/<%= post.id %>/edit" class="btn btn-outline-secondary" ><i class="bi bi-pen"></i> Edit</a>

		<!-- bootstrap Button trigger modal -->
		<button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-trash3"></i> Delete</button>

		<!-- bootstrap Modal -->
		<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered modal-dialog">
				<div class="modal-content">
						<div class="modal-header">
							<h1 class="modal-title fs-5" id="exampleModalLabel">Delete Post</h1>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
						<p>Are you sure? You want to delete the post. There is no going back!</p>
						</div>
						<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<form action="/<%= post.id %>?_method=DELETE" method="POST"><button type="submit" class="btn btn-danger">Delete</button></form>
						</div>
				</div>
			</div>
		</div>
		<hr>
		<div class="post-content"><%- post.content %></div>
	</div>
</div>

<%- include("partials/footer.ejs") %>